package nextpack;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class Amazon {
	WebDriver driver = null;
	
	@BeforeTest
	public void setup() {
		@SuppressWarnings("unused")
		String 
		projectPath = System.getProperty("user.dir");
		
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Drivers\\chromedriver.exe");
		 driver = new ChromeDriver();
	}
	
	@Test
	public void amazonopen() throws InterruptedException {
		driver.get("https://www.amazon.in/");
		
		Thread.sleep(1000, 10);
		
		driver.findElement(By.id("twotabsearchtextbox")).sendKeys("laptop");
		
		Thread.sleep(1000, 10);
		
		JavascriptExecutor js = (JavascriptExecutor) driver;
	    js.executeScript("window.scrollBy(0,350)", "");
	    
	    Thread.sleep(1000, 10);
	    
	    driver.findElement(By.xpath("//li[@id='p_89/ASUS']//span[@class='a-list-item']//a[@class='a-link-normal s-navigation-item']//div[@class='a-checkbox a-checkbox-fancy s-navigation-checkbox aok-float-left']//label//i[@class='a-icon a-icon-checkbox']")).click();
	    Thread.sleep(1000, 10);
	    driver.findElement(By.xpath("//li[@id='p_89/Lenovo']//span[@class='a-list-item']//a[@class='a-link-normal s-navigation-item']//div[@class='a-checkbox a-checkbox-fancy s-navigation-checkbox aok-float-left']//label//i[@class='a-icon a-icon-checkbox']")).click();
	    Thread.sleep(1000, 10);
	    driver.findElement(By.xpath("//span[contains(text(),'ASUS VivoBook 14 (2021) Intel Core i3-1005G1 10th ')]")).click();
	    Thread.sleep(1000, 10);
	    
	    JavascriptExecutor js1 = (JavascriptExecutor) driver;
	    js1.executeScript("window.scrollBy(0,350)", "");
	    
	    driver.findElement(By.xpath("//a[@class='a-declarative']//span[@class='a-expander-prompt'][contains(text(),'See more')]")).click();
	    
	    
	}
	
	@AfterTest
	public void terminate() {
		driver.navigate().back();  
		driver.close();
		driver.quit();
		System.out.println("Test completed succesfully");
	}

}
